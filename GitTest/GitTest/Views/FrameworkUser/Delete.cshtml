@model GitTest.ViewModel.Framework.FrameworkUserVMs.FrameworkUserVM

@(
 UI.Container().VBoxLayout().Size(500, null).Items(
    UI.Form().Flex(1).AutoScroll().Items(
        UI.Text(Language.DeleteConfirm),
        UI.Display(x => x.Entity.ITCode), UI.Display(x => x.Entity.Name),
        UI.MLDisplay(x => x.Entity.Department.Company, y => y.CompanyName),
        UI.MLDisplay(x => x.Entity.Department, y => y.DepartmentName),
        UI.Hidden(x => x.Entity.ID).InputID("ID")
    )
    .Buttons(
        UI.SubmitButton().ButtonText(Language.Delete),
        UI.CloseButton()
    )
).RenderHtml()
)